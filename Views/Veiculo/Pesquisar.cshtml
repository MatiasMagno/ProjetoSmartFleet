@model SmartFleet.Domain.ViewModel.Veiculo;
@{
    ViewBag.Title = "Pesquisar Veículo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Current = " Cadastro / Veiculo / Pesquisar";
}

<form id="formPesquisar" class="form" role="form">
    <section class="panel panel-default">
        <article class="panel-body">
            <div class="row">            
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(x => x.NumPlaca , new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.NumPlaca, new { @class = "form-control"})
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(x => x.NumAnoFab , new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.NumAnoFab, new { @class = "form-control only-number" })
                    </div>
                </div> 
                 <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(x => x.DscMarcaModelo , new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.DscMarcaModelo, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(x => x.IdcSituacao, new { @class = "control-label" })
                        <select class="form-control" 
                                id="IdcSituacao"
                                name="IdcSituacao"
                                asp-for="IdcSituacao" 
                                asp-items="ViewBag.SituacaoVeiculo">
                            <option value="">Selecione</option>
                        </select> 
                    </div>
                </div>                               
            </div>
        </article>
        <footer class="panel-footer">
            <button type="button" class="btn btn-primary btnPesquisar"><i class="fa fa-search"></i> Pesquisar</button>
            <button type="button" class="btn btn-default btn-reset-form" data-loading="false"><i class="fa fa-eraser"></i> Limpar</button>
            <a href=@Url.Action("Incluir", "Veiculo") class="btn btn-default"><i class="fa fa-plus-circle"></i> Incluir</a>
        </footer>
    </section>
</form>

<!--Datatable Pesquisar-->
<form id="form-result" class="form" role="form">
    <div class="panel panel-default hide datatable table-responsive">
        <table id="gridVeiculo"
               class="table table-striped b-t b-light table-bordered table-hover datatable"
               data-crud="true"
               data-form-id="formPesquisar"
               data-object-id="ideVeiculo"
               data-controller="Veiculo"
               data-columns-data="codRenavam,numPlaca,numAnoFab,dscMarcaModelo,idcSituacao"
               data-columns-title="Código RENAVAM,Placa,Ano Fabricação,Marca / Modelo,Situação do Veículo">
        </table>
    </div>
</form>

@section customsJs {
    <script type="text/javascript">
        var validator = $( "#formPesquisar" ).validate();
        validator.resetForm();
    </script>
}
