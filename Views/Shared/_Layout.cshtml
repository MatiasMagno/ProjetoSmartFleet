        Globalize.cultureSelector = 'pt-BR';
        $.validator.setDefaults({ ignore: ".ignore, .tt-hint"});
    </script>

    <!-- Sistema -->
    @RenderSection("customsJs", false)

    @{
        var classHeader = "bg-info";     
        <script type="text/javascript">
            var header = $(".header");
            var obj = $(header).attr("class");
            var className = obj.split(" ")[0];
            var objNew = obj.replace(className, "@classHeader");

            $(header).removeClass();
            $(header).addClass(objNew);
        </script>

        }
    }

    @RenderSection("Scripts", required: false)

    @{
        // Mensagem de retorno do Controller
        if (TempData["MensagemRetorno"] != null)
        {
            var msg = TempData["MensagemRetorno"];
            <script type="text/javascript">
                var strMsg = "@msg";
                var jsonMsg = strMsg.replace(/&#x27;/gi, '"');
                var msg = JSON.parse(jsonMsg);
                app.callMsg(msg);
            </script>  
        }
    }

